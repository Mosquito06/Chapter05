<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.or.dgit.bigdata.chapter05.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chapter05"
        android:textSize="25sp"
        android:gravity="center"
        android:background="@color/colorAccent"
        />

    <Button
        android:id="@+id/toPart2_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Part 2-5"
        android:layout_gravity="center"
        android:onClick="mOnclickBtn"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chapter06"
        android:textSize="25sp"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/eventDele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이벤트 델리게이션 모델"
        android:layout_gravity="center"
        android:onClick="mOnclickBtn"
        />

    <Button
        android:id="@+id/eventHier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이벤트 하이어라키 모델"
        android:layout_gravity="center"
        android:onClick="mOnclickBtn"
        />

</LinearLayout>
